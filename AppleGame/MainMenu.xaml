<Window x:Class="AppleGame.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppleGame"
        mc:Ignorable="d"
        Title="MainMenu" Closing="Window_Closing" WindowStartupLocation="CenterScreen" Height="190" Width="260">
    <StackPanel>
        <Label HorizontalAlignment="Center">Ip адрес</Label>
        <TextBox Margin="70 0 70 0 " x:Name="TBIP">127.0.0.1</TextBox>
        <Label HorizontalAlignment="Center">Порт</Label>
        <TextBox Margin="70 0 70 0" x:Name="TBPort">8888</TextBox>
        <Button Click="Button_Click_1" Margin="70, 50, 70, 0">Новая игра</Button>
        <Button Click="Button_Click" Margin="70, 10, 70, 0">Выход</Button>
    </StackPanel>
</Window>
